  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'offdict'",
      "cargo": {
        "args": ["build", "--bin=offdict", "--package=offdict"],
        "filter": {
          "name": "offdict",
          "kind": "bin"
        }
      },
      "args": ["yaml", "/hdd/OpenMdicts/dict.yaml"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'offdict'",
      "cargo": {
        "args": ["test", "--no-run", "--bin=offdict", "--package=offdict"],
        "filter": {
          "name": "offdict",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
