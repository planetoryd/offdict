  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'offdictd'",
      "cargo": {
        "args": ["build", "--bin=offdictd", "--package=offdictd"],
        "filter": {
          "name": "offdictd",
          "kind": "bin"
        }
      },
      "args": [
        "yaml",
        "-p",
        "/hdd/OpenMdicts/21世紀電腦英漢漢英雙向辭典.1.yaml",
        "-n",
        "21世紀電腦英漢漢英雙向辭典"
      ],
      "cwd": "${workspaceFolder}/offdictd"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'offdict'",
      "cargo": {
        "args": ["test", "--no-run", "--bin=offdict", "--package=offdict"],
        "filter": {
          "name": "offdict",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
